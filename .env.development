# نسخ هذا المحتوى إلى ملف .env.local في جذر المشروع

# Database Configuration
DATABASE_URL="file:./dev.db"

# Authentication
NEXTAUTH_SECRET="your-very-long-random-secret-key-here-minimum-32-characters-12345"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration - وضع التطوير (محاكاة الإرسال)
EMAIL_DEV_MODE="true"
EMAIL_FROM="shop@karinex.de"
EMAIL_FROM_NAME="Karina Khrystych"
EMAIL_CC=""
EMAIL_REPLY_TO="shop@karinex.de"

# SMTP Configuration (للإنتاج - اتركها فارغة في وضع التطوير)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
SMTP_SECURE="false"

# Alternative: Gmail SMTP (مثال)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Alternative: Web.de SMTP (مثال)
# SMTP_HOST="smtp.web.de"
# SMTP_PORT="587"
# SMTP_USER="your-email@web.de"
# SMTP_PASS="your-password"

# Alternative: GMX SMTP (مثال)
# SMTP_HOST="mail.gmx.net"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmx.de"
# SMTP_PASS="your-password"

# Alternative: Resend Service (موصى به للإنتاج)
# RESEND_API_KEY="re_your_api_key_here"
# RESEND_FROM_EMAIL="shop@karinex.de"

# File Upload
UPLOAD_DIR="./user-storage"

# Development
NODE_ENV="development"

