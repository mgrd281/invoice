model Visitor {
  id               String           @id @default(uuid())
  organizationId   String
  visitorToken     String           @unique
  customIdentifier String?
  ipHash           String?
  userAgent      String?
  deviceType     String?
  os             String?
  browser        String?
  browserVersion String?
  osVersion      String?
  ipv4           String?
  ipv6           String?
  country        String?
  language       String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  organization   Organization     @relation("OrganizationToVisitors", fields: [organizationId], references: [id])
  notes            String?
  tags             String?          // Comma-separated or JSON
  lifecycleStatus  String           @default("NEW") // NEW, ACTIVE, LOYAL, CHURNED
  sessions       VisitorSession[]

  @@index([organizationId])
  @@index([visitorToken])
}

model VisitorSession {
  id             String         @id @default(uuid())
  visitorId      String
  organizationId String
  sessionId      String         @unique
  startTime      DateTime       @default(now())
  endTime        DateTime?
  lastActiveAt   DateTime       @default(now())
  referrer       String?
  entryUrl       String?
  exitUrl        String?
  deviceType     String?
  os             String?
  browser        String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  sourceLabel    String?
  sourceMedium   String?
  utmCampaign    String?
  utmContent     String?
  utmMedium      String?
  utmSource      String?
  utmTerm        String?
  intentLabel    String?
  intentScore    Int            @default(0)
  isReturning    Boolean        @default(false)
  cartToken      String?
  checkoutToken  String?
  currency       String?        @default("EUR")
  orderId        String?
  orderNumber    String?
  purchaseStatus String?        @default("OPEN")
  totalValue     Float?         @default(0)
  cartSnapshot   Json?
  removedItems   Json?          // Array of items removed from cart
  itemsCount     Int?           @default(0)
  peakCartValue  Float?         @default(0)
  status         String         @default("ACTIVE")
  city           String?
  region         String?
  ipMasked       String?
  customerId     String?
  isVip          Boolean        @default(false)
  adminNotes     String?
  browserVersion String?
  osVersion      String?
  ipv4           String?
  ipv6           String?
  visitorName    String?
  visitorEmail   String?
  recordingStatus String?       @default("NONE") // NONE, PROCESSING, AVAILABLE
  thumbnailUrl   String?
  events         SessionEvent[]
  recordings     SessionRecording[]
  cartSnapshots  CartSnapshot[]
  goals          GoalTracking[]
  actions        SessionAction[]
  organization   Organization   @relation("OrganizationToVisitorSessions", fields: [organizationId], references: [id])
  visitor        Visitor        @relation(fields: [visitorId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([visitorId])
  @@index([sessionId])
  @@index([lastActiveAt])
}

model SessionAction {
  id             String         @id @default(uuid())
  sessionId      String
  type           String         // e.g. SHOW_COUPON, REQUEST_EMAIL
  payload        Json?          // { code: "SAVE10", value: 10 }
  status         String         @default("PENDING") // PENDING, DELIVERED, COMPLETED
  createdAt      DateTime       @default(now())
  deliveredAt    DateTime?
  
  session        VisitorSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  @@index([sessionId])
  @@index([status])
}

model CartSnapshot {
  id             String         @id @default(uuid())
  sessionId      String
  timestamp      DateTime       @default(now())
  items          Json           // List of products with title, qty, price, image
  totalValue     Float
  itemsCount     Int
  action         String?        // e.g., 'ADD', 'REMOVE', 'INITIAL'
  session        VisitorSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
}

model SessionEvent {
  id        String         @id @default(uuid())
  sessionId String
  type      String
  url       String
  path      String
  timestamp DateTime       @default(now())
  metadata  Json?
  createdAt DateTime       @default(now())
  session   VisitorSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([type])
  @@index([timestamp])
}

model SessionRecording {
  id        String         @id @default(uuid())
  sessionId String
  data      Json           // Array of rrweb events
  createdAt DateTime       @default(now())
  session   VisitorSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
}

model PageAnalytics {
  id              String   @id @default(cuid())
  organizationId  String
  url             String
  
  // Performance Metrics
  avgLoadTime     Int      @default(0)  // milliseconds
  slowLoadCount   Int      @default(0)  // times > 3s
  
  // Engagement Metrics  
  totalViews      Int      @default(0)
  totalDuration   Int      @default(0)  // total seconds
  exitCount       Int      @default(0)
  bounceCount     Int      @default(0)
  
  // Mobile Metrics
  mobileViews     Int      @default(0)
  mobileErrors    Int      @default(0)
  
  date            DateTime @default(now())
  
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  @@unique([organizationId, url, date])
  @@index([organizationId])
  @@index([date])
}

model GoalTracking {
  id              String   @id @default(cuid())
  organizationId  String
  sessionId       String
  goalType        String   // 'purchase', 'whatsapp_click', 'form_submit'
  goalValue       Float?   // order value for purchases
  metadata        Json?    // additional goal data
  timestamp       DateTime @default(now())
  
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  session         VisitorSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  @@index([organizationId])
  @@index([sessionId])
  @@index([goalType])
}

