generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String        @id @default(uuid())
  email             String        @unique
  passwordHash      String?
  name              String?
  image             String?
  emailVerified     DateTime?
  verificationToken String?
  role              UserRole      @default(USER)
  organizationId    String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  isSuspended       Boolean       @default(false)
  lastIp            String?
  country           String?
  lastLoginAt       DateTime?
  featureOrder      Json?
  accounts          Account[]
  auditLogs         AuditLog[]
  sessions          Session[]
  uploadJobs        UploadJob[]
  organization      Organization? @relation(fields: [organizationId], references: [id])
}

model ApiKey {
  id             String       @id @default(uuid())
  organizationId String
  name           String
  key            String       @unique
  lastUsedAt     DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@index([organizationId])
}

model Organization {
  id                      String                    @id @default(uuid())
  name                    String
  slug                    String                    @unique
  address                 String
  zipCode                 String
  city                    String
  country                 String                    @default("DE")
  taxId                   String?
  bankName                String?
  iban                    String?
  bic                     String?
  logoUrl                 String?
  plan                    String                    @default("FREE")
  createdAt               DateTime                  @default(now())
  updatedAt               DateTime                  @updatedAt
  abandonedCarts          AbandonedCart[]
  abandonedCartSettings   AbandonedCartSettings?
  additionalIncomes       AdditionalIncome[]
  apiKeys                 ApiKey[]
  auditLogs               AuditLog[]
  autoReviewSettings      AutoReviewSettings?
  blockedUsers            BlockedUser[]
  blockedIps              BlockedIp[]
  blockedUserAttempts     BlockedUserAttempt[]
  customers               Customer[]
  digitalProducts         DigitalProduct[]
  dunningSettings         DunningSettings?
  dunningTemplates        DunningTemplate[]
  expenses                Expense[]
  googleShoppingSettings  GoogleShoppingSettings?
  invoices                Invoice[]
  invoiceTemplates        InvoiceTemplate[]
  marketingSettings       MarketingSettings?
  orders                  Order[]
  realEstateProfiles      RealEstateSearchProfile[]
  receipts                Receipt[]
  rechnungSettings        RechnungSettings?
  replyTemplates          ReplyTemplate[]
  responseTemplates       ResponseTemplate[]
  reviews                 Review[]
  reviewIncentiveSettings ReviewIncentiveSettings?
  shopifyConnection       ShopifyConnection?
  supportTickets          SupportTicket[]
  taxRates                TaxRate[]
  uploadJobs              UploadJob[]
  users                   User[]
  visitors                Visitor[]                 @relation("OrganizationToVisitors")
  visitorSessions         VisitorSession[]          @relation("OrganizationToVisitorSessions")
  vorkasseSettings        VorkasseSettings?
  widgetSettings          WidgetSettings?
  pageAnalytics           PageAnalytics[]
  goalTracking            GoalTracking[]
}

model WidgetSettings {
  id             String       @id @default(uuid())
  organizationId String       @unique
  primaryColor   String       @default("#2563eb")
  layout         String       @default("list")
  emailEnabled   Boolean      @default(false)
  emailDelayDays Int          @default(3)
  emailSubject   String       @default("Ihre Meinung ist uns wichtig! ðŸŒŸ")
  emailBody      String       @default("Hallo {customer_name},\n\nvielen Dank fÃ¼r Ihren Einkauf bei uns! Wir hoffen, Sie sind mit Ihrer Bestellung zufrieden.\n\nWir wÃ¼rden uns sehr freuen, wenn Sie sich einen Moment Zeit nehmen kÃ¶nnten, um eine Bewertung fÃ¼r {product_title} abzugeben.\n\n[Link zur Bewertung]\n\nVielen Dank und beste GrÃ¼ÃŸe,\nIhr Team")
  reviewsEnabled Boolean      @default(true)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model Account {
  id                String   @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refreshToken      String?
  accessToken       String?
  expiresAt         Int?
  tokenType         String?
  scope             String?
  idToken           String?
  sessionState      String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Customer {
  id                          String             @id @default(uuid())
  organizationId              String
  name                        String
  email                       String?
  phone                       String?
  address                     String
  zipCode                     String
  city                        String
  country                     String             @default("DE")
  taxId                       String?
  shopifyCustomerId           String?            @unique
  vatId                       String?
  createdAt                   DateTime           @default(now())
  updatedAt                   DateTime           @updatedAt
  firstPurchaseDiscountSentAt DateTime?
  firstPurchaseDiscountCode   String?
  status                      String             @default("ACTIVE")
  type                        String             @default("PRIVATE")
  tags                        String[]
  deliveryAddress             String?
  deliveryZip                 String?
  deliveryCity                String?
  deliveryCountry             String?
  organization                Organization       @relation(fields: [organizationId], references: [id])
  documents                   CustomerDocument[]
  notes                       CustomerNote[]
  emails                      EmailMessage[]
  invoices                    Invoice[]
  licenseKeys                 LicenseKey[]
  orders                      Order[]
  payments                    Payment[]
  reviews                     Review[]
  supportTickets              SupportTicket[]

  @@unique([organizationId, shopifyCustomerId], name: "unique_shopify_customer_per_organization")
}

model BlockedUser {
  id             String       @id @default(uuid())
  organizationId String
  email          String
  name           String?
  reason         String?
  blockedBy      String?
  blockedAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@unique([organizationId, email])
  @@index([email])
}

model BlockedIp {
  id             String       @id @default(uuid())
  organizationId String
  ipAddress      String
  reason         String?
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@unique([organizationId, ipAddress])
  @@index([ipAddress])
}

model BlockedUserAttempt {
  id             String       @id @default(uuid())
  organizationId String
  email          String
  attemptType    String
  orderId        String?
  invoiceId      String?
  ipAddress      String?
  userAgent      String?
  blocked        Boolean      @default(true)
  reason         String?
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@index([email])
  @@index([organizationId, createdAt])
}

model CustomerDocument {
  id         String   @id @default(uuid())
  customerId String
  name       String
  url        String
  type       String?
  createdAt  DateTime @default(now())
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model Order {
  id                        String       @id @default(uuid())
  organizationId            String
  customerId                String
  orderNumber               String
  orderDate                 DateTime
  totalAmount               Decimal      @db.Decimal(10, 2)
  currency                  String       @default("EUR")
  status                    OrderStatus  @default(PENDING)
  shopifyOrderId            String?      @unique
  vorkasseReminderLevel     Int          @default(0)
  vorkasseLastReminderAt    DateTime?
  initialPaymentEmailSentAt DateTime?
  createdAt                 DateTime     @default(now())
  updatedAt                 DateTime     @updatedAt
  invoices                  Invoice[]
  customer                  Customer     @relation(fields: [customerId], references: [id])
  organization              Organization @relation(fields: [organizationId], references: [id])

  @@unique([organizationId, orderNumber])
  @@unique([organizationId, shopifyOrderId], name: "unique_shopify_order_per_organization")
}

model InvoiceTemplate {
  id             String       @id @default(uuid())
  organizationId String
  name           String
  htmlContent    String
  cssContent     String
  isDefault      Boolean      @default(false)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  invoices       Invoice[]
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model Invoice {
  id              String           @id @default(uuid())
  organizationId  String
  customerId      String
  orderId         String?
  templateId      String
  invoiceNumber   String
  issueDate       DateTime
  serviceDate     DateTime?
  dueDate         DateTime
  totalNet        Decimal          @db.Decimal(10, 2)
  totalGross      Decimal          @db.Decimal(10, 2)
  totalTax        Decimal          @db.Decimal(10, 2)
  currency        String           @default("EUR")
  status          InvoiceStatus    @default(DRAFT)
  pdfUrl          String?
  immutableHash   String?
  auditLogId      String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  documentKind    String           @default("INVOICE")
  referenceNumber String?
  originalDate    DateTime?
  reason          String?
  refundAmount    Decimal?         @db.Decimal(10, 2)
  headerSubject   String?
  headerText      String?
  footerText      String?
  settings        Json?
  paymentMethod   String?
  orderNumber     String?
  dunningLogs     DunningLog[]
  auditLog        AuditLog?        @relation(fields: [auditLogId], references: [id])
  customer        Customer         @relation(fields: [customerId], references: [id])
  order           Order?           @relation(fields: [orderId], references: [id])
  organization    Organization     @relation(fields: [organizationId], references: [id])
  template        InvoiceTemplate  @relation(fields: [templateId], references: [id])
  history         InvoiceHistory[]
  items           InvoiceItem[]
  payments        Payment[]

  @@unique([organizationId, invoiceNumber])
  @@index([organizationId, issueDate(sort: Desc), invoiceNumber(sort: Desc)])
}

model InvoiceHistory {
  id        String   @id @default(cuid())
  invoiceId String
  type      String
  detail    String?
  createdAt DateTime @default(now())
  invoice   Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model InvoiceItem {
  id          String   @id @default(uuid())
  invoiceId   String
  description String
  ean         String?
  quantity    Decimal  @db.Decimal(10, 2)
  unitPrice   Decimal  @db.Decimal(10, 2)
  taxRateId   String
  netAmount   Decimal  @db.Decimal(10, 2)
  grossAmount Decimal  @db.Decimal(10, 2)
  taxAmount   Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  taxRate     TaxRate  @relation(fields: [taxRateId], references: [id])
}

model TaxRate {
  id             String        @id @default(uuid())
  organizationId String
  name           String
  rate           Decimal       @db.Decimal(5, 4)
  isDefault      Boolean       @default(false)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  invoiceItems   InvoiceItem[]
  organization   Organization  @relation(fields: [organizationId], references: [id])

  @@unique([organizationId, name])
}

model Payment {
  id            String    @id @default(uuid())
  invoiceId     String?
  customerId    String?
  amount        Decimal   @db.Decimal(10, 2)
  paymentDate   DateTime
  method        String
  transactionId String?
  status        String    @default("COMPLETED")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  customer      Customer? @relation(fields: [customerId], references: [id])
  invoice       Invoice?  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model UploadJob {
  id             String       @id @default(uuid())
  organizationId String
  userId         String
  fileName       String
  fileUrl        String
  status         UploadStatus @default(PENDING)
  totalRows      Int?
  processedRows  Int?
  failedRows     Int?
  errorMessage   String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
  user           User         @relation(fields: [userId], references: [id])
}

model AuditLog {
  id             String       @id @default(uuid())
  organizationId String
  userId         String?
  action         String
  entityType     String
  entityId       String?
  details        Json?
  ipAddress      String?
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id])
  user           User?        @relation(fields: [userId], references: [id])
  invoices       Invoice[]
}

model ShopifyConnection {
  id             String       @id @default(uuid())
  organizationId String       @unique
  shopName       String
  accessToken    String
  scopes         String
  isActive       Boolean      @default(true)
  lastSyncAt     DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model DigitalProduct {
  id               String                         @id @default(uuid())
  organizationId   String
  shopifyProductId String                         @unique
  title            String
  emailTemplate    String?
  downloadUrl      String?
  buttonText       String?                        @default("Download")
  buttonColor      String?                        @default("#000000")
  buttonTextColor  String?                        @default("#ffffff")
  buttonAlignment  String?                        @default("left")
  downloadButtons  Json?
  createdAt        DateTime                       @default(now())
  updatedAt        DateTime                       @updatedAt
  organization     Organization                   @relation(fields: [organizationId], references: [id])
  variantSettings  DigitalProductVariantSetting[]
  keys             LicenseKey[]

  @@unique([organizationId, shopifyProductId])
}

model DigitalProductVariantSetting {
  id               String         @id @default(uuid())
  digitalProductId String
  shopifyVariantId String
  emailTemplate    String?
  downloadButtons  Json?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  digitalProduct   DigitalProduct @relation(fields: [digitalProductId], references: [id], onDelete: Cascade)

  @@unique([digitalProductId, shopifyVariantId])
}

model LicenseKey {
  id               String         @id @default(uuid())
  digitalProductId String
  customerId       String?
  key              String
  isUsed           Boolean        @default(false)
  orderId          String?
  shopifyOrderId   String?
  shopifyVariantId String?
  usedAt           DateTime?
  emailSent        Boolean        @default(false)
  emailSentAt      DateTime?
  deliveryStatus   String         @default("PENDING")
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  customer         Customer?      @relation(fields: [customerId], references: [id])
  digitalProduct   DigitalProduct @relation(fields: [digitalProductId], references: [id])
}

model SupportTicket {
  id             String          @id @default(uuid())
  organizationId String
  customerId     String?
  customerEmail  String
  customerName   String?
  orderNumber    String?
  subject        String?
  status         String          @default("OPEN")
  priority       String          @default("MEDIUM")
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  emails         EmailMessage[]
  customer       Customer?       @relation(fields: [customerId], references: [id])
  organization   Organization    @relation(fields: [organizationId], references: [id])
  messages       TicketMessage[]
}

model TicketMessage {
  id        String        @id @default(uuid())
  ticketId  String
  sender    String
  content   String
  createdAt DateTime      @default(now())
  ticket    SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
}

model CustomerNote {
  id         String   @id @default(uuid())
  customerId String
  content    String
  author     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model EmailMessage {
  id         String         @id @default(uuid())
  customerId String?
  ticketId   String?
  gmailId    String?        @unique
  subject    String?
  content    String
  snippet    String?
  from       String
  to         String
  receivedAt DateTime       @default(now())
  isInternal Boolean        @default(false)
  createdAt  DateTime       @default(now())
  customer   Customer?      @relation(fields: [customerId], references: [id])
  ticket     SupportTicket? @relation(fields: [ticketId], references: [id])
}

model ResponseTemplate {
  id                String       @id @default(uuid())
  organizationId    String
  title             String
  content           String
  category          String?
  autoReplyKeywords String?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  organization      Organization @relation(fields: [organizationId], references: [id])
}

model DunningSettings {
  id                    String       @id @default(uuid())
  organizationId        String       @unique
  enabled               Boolean      @default(false)
  reminderDays          Int          @default(7)
  warning1Days          Int          @default(3)
  warning2Days          Int          @default(7)
  finalWarningDays      Int          @default(7)
  warning1Surcharge     Decimal      @default(5.0) @db.Decimal(5, 2)
  warning2Surcharge     Decimal      @default(3.0) @db.Decimal(5, 2)
  finalWarningSurcharge Decimal      @default(3.0) @db.Decimal(5, 2)
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
  organization          Organization @relation(fields: [organizationId], references: [id])
}

model DunningTemplate {
  id             String       @id @default(uuid())
  organizationId String
  level          String
  subject        String
  content        String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@unique([organizationId, level])
}

model DunningLog {
  id             String   @id @default(uuid())
  invoiceId      String
  level          String
  sentAt         DateTime @default(now())
  surchargeAdded Decimal  @default(0.0) @db.Decimal(10, 2)
  invoice        Invoice  @relation(fields: [invoiceId], references: [id])
}

model MarketingSettings {
  id                String       @id @default(uuid())
  organizationId    String       @unique
  fpdEnabled        Boolean      @default(false)
  fpdPercentage     Int          @default(10)
  fpdValidityDays   Int          @default(30)
  fpdEmailSubject   String       @default("Ihr persÃ¶nlicher 10%-Rabattcode als DankeschÃ¶n ðŸŽ")
  fpdEmailBody      String
  exitIntentEnabled Boolean      @default(false)
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  organization      Organization @relation(fields: [organizationId], references: [id])
}

model Expense {
  id                String       @id @default(uuid())
  organizationId    String
  expenseNumber     String
  date              DateTime
  category          String
  description       String
  supplier          String
  supplierTaxId     String?
  netAmount         Decimal      @db.Decimal(10, 2)
  taxRate           Decimal      @db.Decimal(5, 2)
  taxAmount         Decimal      @db.Decimal(10, 2)
  totalAmount       Decimal      @db.Decimal(10, 2)
  receiptUrl        String?
  receiptFileName   String?
  accountingAccount String?
  costCenter        String?
  bookingText       String?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  organization      Organization @relation(fields: [organizationId], references: [id])
}

model AdditionalIncome {
  id             String       @id @default(uuid())
  organizationId String
  date           DateTime
  description    String
  amount         Decimal      @db.Decimal(10, 2)
  type           String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model Receipt {
  id             String       @id @default(uuid())
  organizationId String
  filename       String
  url            String
  mimeType       String?
  size           Int?
  date           DateTime
  description    String?
  amount         Decimal?     @db.Decimal(10, 2)
  category       String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model Review {
  id             String       @id @default(uuid())
  organizationId String
  productId      String
  productTitle   String?
  productHandle  String?
  productImage   String?
  customerId     String?
  customerName   String
  customerEmail  String
  rating         Int
  title          String?
  content        String?
  images         String[]
  videos         String[]
  status         String       @default("PENDING")
  source         String       @default("web")
  isVerified     Boolean      @default(false)
  isFeatured     Boolean      @default(false)
  helpful        Int          @default(0)
  notHelpful     Int          @default(0)
  reply          String?
  repliedAt      DateTime?
  handlingStatus String       @default("OPEN")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  customer       Customer?    @relation(fields: [customerId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model ReplyTemplate {
  id             String       @id @default(uuid())
  organizationId String
  title          String
  content        String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model AutoReviewSettings {
  id             String               @id @default(uuid())
  organizationId String               @unique
  enabled        Boolean              @default(false)
  delayMinutes   Int                  @default(0)
  percentage     Int                  @default(100)
  minRating      Int                  @default(4)
  maxRating      Int                  @default(5)
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
  organization   Organization         @relation(fields: [organizationId], references: [id])
  templates      AutoReviewTemplate[]
}

model AutoReviewTemplate {
  id         String             @id @default(uuid())
  settingsId String
  title      String?
  content    String
  rating     Int?
  productId  String?
  createdAt  DateTime           @default(now())
  updatedAt  DateTime           @updatedAt
  settings   AutoReviewSettings @relation(fields: [settingsId], references: [id], onDelete: Cascade)
}

model GoogleShoppingSettings {
  id                    String       @id @default(uuid())
  organizationId        String       @unique
  productSelection      String       @default("all")
  filterCustomerReviews Boolean      @default(true)
  filterImportedReviews Boolean      @default(true)
  filterEmptyComments   Boolean      @default(false)
  countryFilter         String       @default("all")
  keywordFilter         String?
  productIdentification String       @default("gtin")
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
  organization          Organization @relation(fields: [organizationId], references: [id])
}

model ProductReviewSummary {
  id          String   @id @default(uuid())
  productId   String   @unique
  summary     String
  pros        String
  cons        String
  lastUpdated DateTime @default(now())
}

model ReviewIncentiveSettings {
  id             String       @id @default(uuid())
  organizationId String       @unique
  enabled        Boolean      @default(false)
  discountType   String       @default("percentage")
  discountValue  Float        @default(10)
  minRating      Int          @default(1)
  requirePhoto   Boolean      @default(false)
  validityDays   Int          @default(30)
  emailSubject   String       @default("Danke fÃ¼r Ihre Bewertung! Hier ist Ihr Gutschein")
  emailBody      String       @default("Vielen Dank fÃ¼r Ihre Bewertung. Als DankeschÃ¶n erhalten Sie einen Rabatt auf Ihre nÃ¤chste Bestellung.")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model AbandonedCart {
  id                    String                  @id @default(uuid())
  organizationId        String
  checkoutId            String                  @unique
  checkoutToken         String?
  email                 String
  cartUrl               String
  lineItems             Json?
  totalPrice            Decimal?                @db.Decimal(10, 2)
  currency              String                  @default("EUR")
  isRecovered           Boolean                 @default(false)
  recoverySent          Boolean                 @default(false)
  recoverySentAt        DateTime?
  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @updatedAt
  couponCode            String?
  couponExpiresAt       DateTime?
  discountType          String?
  discountValue         Float?
  removedItems          Json?
  totalPricePeak        Decimal?                @db.Decimal(10, 2)
  deviceInfo            Json?
  
  // Enterprise Features
  timeline              Json?                   // List of events: { type: 'add', item: ..., time: ... }
  intentScore           Int                     @default(0) // 0-100
  recommendation        Json?                   // { action: 'send_coupon', delay: 15, reason: 'High Value' }
  lastActiveAt          DateTime?               @default(now())

  lastEnrichmentAttempt DateTime?
  organization          Organization            @relation(fields: [organizationId], references: [id])
  emailLogs             AbandonedCartEmailLog[]

  @@unique([organizationId, checkoutId])
}

model AbandonedCartSettings {
  id              String       @id @default(uuid())
  organizationId  String       @unique
  enabled         Boolean      @default(false)
  autoSendDelay   Int          @default(60)
  defaultDiscount Float        @default(10.0)
  expiryHours     Int          @default(24)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  organization    Organization @relation(fields: [organizationId], references: [id])
