generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String        @id @default(uuid())
  email             String        @unique
  passwordHash      String?
  name              String?
  image             String?
  emailVerified     DateTime?
  verificationToken String?
  role              UserRole      @default(USER)
  organizationId    String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  isSuspended       Boolean       @default(false)
  lastIp            String?
  country           String?
  lastLoginAt       DateTime?
  featureOrder      Json?
  accounts          Account[]
  auditLogs         AuditLog[]
  sessions          Session[]
  uploadJobs        UploadJob[]
  organization      Organization? @relation(fields: [organizationId], references: [id])
}

model ApiKey {
  id             String       @id @default(uuid())
  organizationId String
  name           String
  key            String       @unique
  lastUsedAt     DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@index([organizationId])
}

model Organization {
  id                      String                    @id @default(uuid())
  name                    String
  slug                    String                    @unique
  address                 String
  zipCode                 String
  city                    String
  country                 String                    @default("DE")
  taxId                   String?
  bankName                String?
  iban                    String?
  bic                     String?
  logoUrl                 String?
  plan                    String                    @default("FREE")
  createdAt               DateTime                  @default(now())
  updatedAt               DateTime                  @updatedAt
  abandonedCarts          AbandonedCart[]
  abandonedCartSettings   AbandonedCartSettings?
  additionalIncomes       AdditionalIncome[]
  apiKeys                 ApiKey[]
  auditLogs               AuditLog[]
  autoReviewSettings      AutoReviewSettings?
  blockedIps              BlockedIp[]
  blockedUsers            BlockedUser[]
  blockedUserAttempts     BlockedUserAttempt[]
  customers               Customer[]
  digitalProducts         DigitalProduct[]
  dunningSettings         DunningSettings?
  dunningTemplates        DunningTemplate[]
  expenses                Expense[]
  goalTracking            GoalTracking[]
  googleShoppingSettings  GoogleShoppingSettings?
  invoices                Invoice[]
  invoiceTemplates        InvoiceTemplate[]
  marketingSettings       MarketingSettings?
  orders                  Order[]
  pageAnalytics           PageAnalytics[]
  purchaseInvoices        PurchaseInvoice[]
  realEstateProfiles      RealEstateSearchProfile[]
  receipts                Receipt[]
  rechnungSettings        RechnungSettings?
  replyTemplates          ReplyTemplate[]
  responseTemplates       ResponseTemplate[]
  reviews                 Review[]
  reviewIncentiveSettings ReviewIncentiveSettings?
  shopifyConnection       ShopifyConnection?
  supportTickets          SupportTicket[]
  taxRates                TaxRate[]
  uploadJobs              UploadJob[]
  users                   User[]
  visitors                Visitor[]                 @relation("OrganizationToVisitors")
  visitorSessions         VisitorSession[]          @relation("OrganizationToVisitorSessions")
  vorkasseSettings        VorkasseSettings?
  widgetSettings          WidgetSettings?
  reviewSources           ReviewSource[]
  importDrafts            ImportDraft[]
  securitySettings        SecuritySettings?
  brokenLinks             BrokenLink[]
  redirectScanJobs        RedirectScanJob[]
  redirectActionLogs      RedirectActionLog[]
  suppliers               Supplier[]
  storefrontVisits        StorefrontVisit[]
  paypalSettings          PayPalSettings?
  paypalTransactions      PayPalTransaction[]
  expenseCategories       ExpenseCategory[]
  budgets                 Budget[]
  agentConversations      AgentConversation[]
  agentTasks              AgentTask[]
}

model PayPalSettings {
  id             String       @id @default(uuid())
  organizationId String       @unique
  clientId       String
  clientSecret   String
  webhookId      String?
  isActive       Boolean      @default(false)
  mode           String       @default("live") // "live" or "sandbox"
  lastSyncAt     DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model PayPalTransaction {
  id              String       @id @default(uuid())
  organizationId  String
  paypalId        String       @unique
  orderId         String?
  amount          Decimal      @db.Decimal(10, 2)
  currency        String       @default("EUR")
  status          String
  payerEmail      String?
  payerName       String?
  transactionDate DateTime
  invoiceId       String?
  customerId      String?
  rawData         Json?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  organization    Organization @relation(fields: [organizationId], references: [id])
  invoice         Invoice?     @relation(fields: [invoiceId], references: [id])
  customer        Customer?    @relation(fields: [customerId], references: [id])

  @@index([organizationId, transactionDate])
}

model BrokenLink {
  id             String       @id @default(uuid())
  organizationId String
  url            String
  referrer       String?
  hits           Int          @default(1)
  firstSeen      DateTime     @default(now())
  lastSeen       DateTime     @default(now())
  resolved       Boolean      @default(false)
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@unique([organizationId, url])
  @@index([organizationId, lastSeen])
}

model RedirectScanJob {
  id             String       @id @default(uuid())
  organizationId String
  status         String       @default("PENDING") // PENDING, RUNNING, COMPLETED, FAILED
  totalUrls      Int          @default(0)
  processedUrls  Int          @default(0)
  found404s      Int          @default(0)
  errorMessage   String?
  createdAt      DateTime     @default(now())
  finishedAt     DateTime?
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@index([organizationId])
}

model RedirectActionLog {
  id             String       @id @default(uuid())
  organizationId String
  type           String       @default("SINGLE") // SINGLE, BULK, AUTO, CSV
  details        Json
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@index([organizationId])
}

model ReviewSource {
  id             String       @id @default(uuid())
  organizationId String
  productId      String
  productTitle   String?
  url            String
  type           String       @default("unknown")
  isActive       Boolean      @default(true)
  lastSyncAt     DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
  
  @@unique([organizationId, url])
  @@index([productId])
}

model WidgetSettings {
  id             String       @id @default(uuid())
  organizationId String       @unique
  primaryColor   String       @default("#2563eb")
  layout         String       @default("list")
  emailEnabled   Boolean      @default(false)
  emailDelayDays Int          @default(3)
  emailSubject   String       @default("Ihre Meinung ist uns wichtig! üåü")
  emailBody      String       @default("Hallo {customer_name},\n\nvielen Dank f√ºr Ihren Einkauf bei uns! Wir hoffen, Sie sind mit Ihrer Bestellung zufrieden.\n\nWir w√ºrden uns sehr freuen, wenn Sie sich einen Moment Zeit nehmen k√∂nnten, um eine Bewertung f√ºr {product_title} abzugeben.\n\n[Link zur Bewertung]\n\nVielen Dank und beste Gr√º√üe,\nIhr Team")
  reviewsEnabled Boolean      @default(true)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model Account {
  id                String   @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refreshToken      String?
  accessToken       String?
  expiresAt         Int?
  tokenType         String?
  scope             String?
  idToken           String?
  sessionState      String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Customer {
  id                          String             @id @default(uuid())
  organizationId              String
  name                        String
  email                       String?
  phone                       String?
  address                     String
  zipCode                     String
  city                        String
  country                     String             @default("DE")
  taxId                       String?
  shopifyCustomerId           String?            @unique
  vatId                       String?
  createdAt                   DateTime           @default(now())
  updatedAt                   DateTime           @updatedAt
  firstPurchaseDiscountSentAt DateTime?
  firstPurchaseDiscountCode   String?
  status                      String             @default("ACTIVE")
  type                        String             @default("PRIVATE")
  tags                        String[]
  deliveryAddress             String?
  deliveryZip                 String?
  deliveryCity                String?
  deliveryCountry             String?
  organization                Organization       @relation(fields: [organizationId], references: [id])
  documents                   CustomerDocument[]
  notes                       CustomerNote[]
  emails                      EmailMessage[]
  invoices                    Invoice[]
  licenseKeys                 LicenseKey[]
  orders                      Order[]
  payments                    Payment[]
  reviews                     Review[]
  supportTickets              SupportTicket[]
  paypalTransactions          PayPalTransaction[]

  @@unique([organizationId, shopifyCustomerId], name: "unique_shopify_customer_per_organization")
}

model BlockedUser {
  id             String       @id @default(uuid())
  organizationId String
  email          String
  name           String?
  reason         String?
  blockedBy      String?
  blockedAt      DateTime     @default(now())
  type           String       @default("PERMANENT") // "PERMANENT" | "TEMPORARY"
  expiresAt      DateTime?
  notes          String?
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@unique([organizationId, email])
  @@index([email])
}

model BlockedIp {
  id             String       @id @default(uuid())
  organizationId String
  ipAddress      String
  reason         String?
  status         String       @default("active") // "active" | "disabled"
  createdBy      String?
  createdAt      DateTime     @default(now())
  type           String       @default("PERMANENT") // "PERMANENT" | "TEMPORARY"
  expiresAt      DateTime?
  notes          String?
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@unique([organizationId, ipAddress])
  @@index([ipAddress])
}

model SecuritySettings {
  id                    String       @id @default(uuid())
  organizationId        String       @unique
  blockFailedAttempts   Boolean      @default(false)
  maxFailedAttempts     Int          @default(5)
  blockSuspiciousDomains Boolean     @default(false)
  autoUnblock           Boolean      @default(false)
  autoUnblockDuration   Int          @default(24) // hours
  storefrontBlockingEnabled Boolean  @default(true)
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
  organization          Organization @relation(fields: [organizationId], references: [id])
}

model BlockedUserAttempt {
  id             String       @id @default(uuid())
  organizationId String
  email          String
  attemptType    String
  orderId        String?
  invoiceId      String?
  ipAddress      String?
  userAgent      String?
  blocked        Boolean      @default(true)
  reason         String?
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@index([email])
  @@index([organizationId, createdAt])
}

model CustomerDocument {
  id         String   @id @default(uuid())
  customerId String
  name       String
  url        String
  type       String?
  createdAt  DateTime @default(now())
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model Order {
  id                        String       @id @default(uuid())
  organizationId            String
  customerId                String
  orderNumber               String
  orderDate                 DateTime
  totalAmount               Decimal      @db.Decimal(10, 2)
  currency                  String       @default("EUR")
  status                    OrderStatus  @default(PENDING)
  shopifyOrderId            String?      @unique
  vorkasseReminderLevel     Int          @default(0)
  vorkasseLastReminderAt    DateTime?
  initialPaymentEmailSentAt DateTime?
  createdAt                 DateTime     @default(now())
  updatedAt                 DateTime     @updatedAt
  invoices                  Invoice[]
  customer                  Customer     @relation(fields: [customerId], references: [id])
  organization              Organization @relation(fields: [organizationId], references: [id])

  @@unique([organizationId, orderNumber])
  @@unique([organizationId, shopifyOrderId], name: "unique_shopify_order_per_organization")
}

model InvoiceTemplate {
  id             String       @id @default(uuid())
  organizationId String
  name           String
  htmlContent    String
  cssContent     String
  isDefault      Boolean      @default(false)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  invoices       Invoice[]
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model Invoice {
  id              String           @id @default(uuid())
  organizationId  String
  customerId      String
  orderId         String?
  templateId      String
  invoiceNumber   String
  issueDate       DateTime
  serviceDate     DateTime?
  dueDate         DateTime
  totalNet        Decimal          @db.Decimal(10, 2)
  totalGross      Decimal          @db.Decimal(10, 2)
  totalTax        Decimal          @db.Decimal(10, 2)
  currency        String           @default("EUR")
  status          InvoiceStatus    @default(DRAFT)
  pdfUrl          String?
  immutableHash   String?
  auditLogId      String?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  documentKind    String           @default("INVOICE")
  referenceNumber String?
  originalDate    DateTime?
  reason          String?
  refundAmount    Decimal?         @db.Decimal(10, 2)
  headerSubject   String?
  headerText      String?
  footerText      String?
  settings        Json?
  paymentMethod   String?
  trafficSourceKey   String?
  trafficSourceLabel String?
  trafficSourceRaw   String?
  utmJson            Json?
  orderNumber     String?
  dunningLogs     DunningLog[]
  auditLog        AuditLog?        @relation(fields: [auditLogId], references: [id])
  customer        Customer         @relation(fields: [customerId], references: [id])
  order           Order?           @relation(fields: [orderId], references: [id])
  organization    Organization     @relation(fields: [organizationId], references: [id])
  template        InvoiceTemplate  @relation(fields: [templateId], references: [id])
  history         InvoiceHistory[]
  items           InvoiceItem[]
  payments        Payment[]
  paypalTransactions PayPalTransaction[]

  @@unique([organizationId, invoiceNumber])
  @@index([organizationId, issueDate(sort: Desc), invoiceNumber(sort: Desc)])
}

model InvoiceHistory {
  id        String   @id @default(cuid())
  invoiceId String
  type      String
  detail    String?
  createdAt DateTime @default(now())
  invoice   Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model InvoiceItem {
  id          String   @id @default(uuid())
  invoiceId   String
  description String
  ean         String?
  quantity    Decimal  @db.Decimal(10, 2)
  unitPrice   Decimal  @db.Decimal(10, 2)
  taxRateId   String
  netAmount   Decimal  @db.Decimal(10, 2)
  grossAmount Decimal  @db.Decimal(10, 2)
  taxAmount   Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  invoice     Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  taxRate     TaxRate  @relation(fields: [taxRateId], references: [id])
}

model TaxRate {
  id             String        @id @default(uuid())
  organizationId String
  name           String
  rate           Decimal       @db.Decimal(5, 4)
  isDefault      Boolean       @default(false)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  invoiceItems   InvoiceItem[]
  organization   Organization  @relation(fields: [organizationId], references: [id])

  @@unique([organizationId, name])
}

model Payment {
  id            String    @id @default(uuid())
  invoiceId     String?
  customerId    String?
  amount        Decimal   @db.Decimal(10, 2)
  paymentDate   DateTime
  method        String
  transactionId String?
  status        String    @default("COMPLETED")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  customer      Customer? @relation(fields: [customerId], references: [id])
  invoice       Invoice?  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model UploadJob {
  id             String       @id @default(uuid())
  organizationId String
  userId         String
  fileName       String
  fileUrl        String
  status         UploadStatus @default(PENDING)
  totalRows      Int?
  processedRows  Int?
  failedRows     Int?
  errorMessage   String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
  user           User         @relation(fields: [userId], references: [id])
}

model AuditLog {
  id             String       @id @default(uuid())
  organizationId String
  userId         String?
  action         String
  entityType     String
  entityId       String?
  details        Json?
  ipAddress      String?
  createdAt      DateTime     @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id])
  user           User?        @relation(fields: [userId], references: [id])
  invoices       Invoice[]
}

model ShopifyConnection {
  id             String       @id @default(uuid())
  organizationId String       @unique
  shopName       String
  accessToken    String
  scopes         String
  isActive       Boolean      @default(true)
  lastSyncAt     DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model DigitalProduct {
  id               String                         @id @default(uuid())
  organizationId   String
  shopifyProductId String                         @unique
  title            String
  emailTemplate    String?
  downloadUrl      String?
  buttonText       String?                        @default("Download")
  buttonColor      String?                        @default("#000000")
  buttonTextColor  String?                        @default("#ffffff")
  buttonAlignment  String?                        @default("left")
  downloadButtons  Json?
  autoSendVorkasse Boolean                        @default(true)
  createdAt        DateTime                       @default(now())
  updatedAt        DateTime                       @updatedAt
  organization     Organization                   @relation(fields: [organizationId], references: [id])
  variantSettings  DigitalProductVariantSetting[]
  keys             LicenseKey[]

  @@unique([organizationId, shopifyProductId])
}

model DigitalProductVariantSetting {
  id               String         @id @default(uuid())
  digitalProductId String
  shopifyVariantId String
  emailTemplate    String?
  downloadButtons  Json?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  digitalProduct   DigitalProduct @relation(fields: [digitalProductId], references: [id], onDelete: Cascade)

  @@unique([digitalProductId, shopifyVariantId])
}

model LicenseKey {
  id               String         @id @default(uuid())
  digitalProductId String
  customerId       String?
  key              String
  isUsed           Boolean        @default(false)
  orderId          String?
  shopifyOrderId   String?
  shopifyVariantId String?
  usedAt           DateTime?
  emailSent        Boolean        @default(false)
  emailSentAt      DateTime?
  deliveryStatus   String         @default("PENDING")
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  customer         Customer?      @relation(fields: [customerId], references: [id])
  digitalProduct   DigitalProduct @relation(fields: [digitalProductId], references: [id])
}

model SupportTicket {
  id             String          @id @default(uuid())
  organizationId String
  customerId     String?
  customerEmail  String
  customerName   String?
  orderNumber    String?
  subject        String?
  status         String          @default("OPEN")
  priority       String          @default("MEDIUM")
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  emails         EmailMessage[]
  customer       Customer?       @relation(fields: [customerId], references: [id])
  organization   Organization    @relation(fields: [organizationId], references: [id])
  messages       TicketMessage[]
}

model TicketMessage {
  id        String        @id @default(uuid())
  ticketId  String
  sender    String
  content   String
  createdAt DateTime      @default(now())
  ticket    SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
}

model CustomerNote {
  id         String   @id @default(uuid())
  customerId String
  content    String
  author     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model EmailMessage {
  id         String         @id @default(uuid())
  customerId String?
  ticketId   String?
  gmailId    String?        @unique
  subject    String?
  content    String
  snippet    String?
  from       String
  to         String
  receivedAt DateTime       @default(now())
  isInternal Boolean        @default(false)
  createdAt  DateTime       @default(now())
  customer   Customer?      @relation(fields: [customerId], references: [id])
  ticket     SupportTicket? @relation(fields: [ticketId], references: [id])
}

model ResponseTemplate {
  id                String       @id @default(uuid())
  organizationId    String
  title             String
  content           String
  category          String?
  autoReplyKeywords String?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  organization      Organization @relation(fields: [organizationId], references: [id])
}

model DunningSettings {
  id                    String       @id @default(uuid())
  organizationId        String       @unique
  enabled               Boolean      @default(false)
  reminderDays          Int          @default(7)
  warning1Days          Int          @default(3)
  warning2Days          Int          @default(7)
  finalWarningDays      Int          @default(7)
  warning1Surcharge     Decimal      @default(5.0) @db.Decimal(5, 2)
  warning2Surcharge     Decimal      @default(3.0) @db.Decimal(5, 2)
  finalWarningSurcharge Decimal      @default(3.0) @db.Decimal(5, 2)
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
  organization          Organization @relation(fields: [organizationId], references: [id])
}

model DunningTemplate {
  id             String       @id @default(uuid())
  organizationId String
  level          String
  subject        String
  content        String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@unique([organizationId, level])
}

model DunningLog {
  id             String   @id @default(uuid())
  invoiceId      String
  level          String
  sentAt         DateTime @default(now())
  surchargeAdded Decimal  @default(0.0) @db.Decimal(10, 2)
  invoice        Invoice  @relation(fields: [invoiceId], references: [id])
}

model MarketingSettings {
  id                String       @id @default(uuid())
  organizationId    String       @unique
  fpdEnabled        Boolean      @default(false)
  fpdPercentage     Int          @default(10)
  fpdValidityDays   Int          @default(30)
  fpdEmailSubject   String       @default("Ihr pers√∂nlicher 10%-Rabattcode als Dankesch√∂n üéÅ")
  fpdEmailBody      String
  exitIntentEnabled Boolean      @default(false)
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  organization      Organization @relation(fields: [organizationId], references: [id])
}

model Expense {
  id                String           @id @default(uuid())
  organizationId    String
  expenseNumber     String
  date              DateTime
  category          String?          // Deprecated, use categoryId
  categoryId        String?
  description       String
  supplier          String
  supplierTaxId     String?
  netAmount         Decimal          @db.Decimal(10, 2)
  taxRate           Decimal          @db.Decimal(5, 2)
  taxAmount         Decimal          @db.Decimal(10, 2)
  totalAmount       Decimal          @db.Decimal(10, 2)
  receiptUrl        String?
  receiptFileName   String?
  accountingAccount String?
  costCenter        String?
  bookingText       String?
  paymentMethod     String           @default("CASH") // CASH, CARD, PAYPAL, TRANSFER, OTHER
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
  organization      Organization     @relation(fields: [organizationId], references: [id])
  expenseCategory   ExpenseCategory? @relation(fields: [categoryId], references: [id])
  isRecurring       Boolean          @default(false)
  recurringInterval String?          // DAILY, WEEKLY, MONTHLY, YEARLY
  endDate           DateTime?
}

model ExpenseCategory {
  id             String       @id @default(uuid())
  organizationId String
  name           String
  iconKey        String       @default("Tag")
  color          String?      @default("#000000")
  type           String       @default("OPERATIONAL")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  rulesKeywords  String?      // Comma separated keywords for auto-classification
  organization   Organization @relation(fields: [organizationId], references: [id])
  expenses       Expense[]
  budgets        Budget[]

  @@unique([organizationId, name])
}

model Budget {
  id                String       @id @default(uuid())
  organizationId    String
  month             String       // Format: YYYY-MM
  amount            Decimal      @db.Decimal(10, 2)
  categoryId        String?
  alertThreshold80  Boolean      @default(true)
  alertThreshold100 Boolean      @default(true)
  createdAt         DateTime     @default(now())
